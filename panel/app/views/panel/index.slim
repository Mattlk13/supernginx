- unless @domains.blank?
  .dropdown
    button.btn.btn-primary.dropdown-toggle data-toggle="dropdown" Domains
      <span class="caret"></span></button>
    ul.dropdown-menu
      - @domains.each do |domain|
        li(id=domain.domain): a data-toggle="modal" href="#" data-target="#mails" #{domain.domain}
- else
  p No domains for the user #{@name}




div.modal.fade id="mails" role="dialog"
  div.modal-dialog
